@{
    Layout = "_ColumnsOne";

    //page class
    Html.AppendPageCssClassParts("homepage");
}

<header class="home">
    <div class="container-fluid">

        <div class="row">
            @{
                var r = new Random();
                var rnd = "/Themes/Sinswap/content/images/headerbg/headerbgA" + r.Next(14) + ".png";
                var rnd2 = "/Themes/Sinswap/content/images/headerbg/headerbgB" + r.Next(12) + ".png";
            }

            <div class="floatingObj1 d-none d-md-block" data-stellar-ratio="0.4">
                <img src=@rnd />
            </div>

            <div class="floatingObj2 d-none d-md-block" data-stellar-ratio="0.6">
                <img src=@rnd2 />
            </div>

            <div class="col-12 col-md-4 logoContainer">
                <h1>sinswap</h1>
                @await Component.InvokeAsync("Logo")
            </div>

            @await Component.InvokeAsync("Header")

        </div>

        <div class="row">
            <div class="col-12 payoffContainer" data-stellar-background-ratio="0.5">
                <div class="payoff">We are all born sinners.</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 searchContainer">
                <div class="searchTitle">Find what you're looking for...</div>
                @await Component.InvokeAsync("SearchBox")
            </div>
        </div>

    </div>
</header>

@await Component.InvokeAsync("TopVendor")

@await Component.InvokeAsync("Blog", new { amount = 6 })

@await Component.InvokeAsync("VendorFeaturette", new { name = "Regina Lemme" })

@await Component.InvokeAsync("HomepageCategories", new { showMostPopular = true })

@await Component.InvokeAsync("MostPopularVendor")


<div class="container-fluid promoContainer">
    <div class="row">
        <div class="col">
            <div class="container">

                <h2>
                    We and our users don’t judge anybody!<br />
                    Be yourself and joining <strong>sinswap</strong> for free!
                </h2>

                <div class="flex-row row no-gutters">

                    <div class="col-12 col-lg-6">
                        <div class="promoCard seller">
                            <div class="content">
                                <h3>Sell as a Free or Premium member</h3>
                                <p>
                                    Get a lot of extra features when you go Premium
                                </p>
                                <a href="@Url.RouteUrl("Register")" class="btn btn-light">Start your own <strong>sinswap</strong>-shop now!</a>
                                <div class="footnote">We DO NOT ask any percentage of what you sell</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6">
                        <div class="promoCard buyer">
                            <div class="content">
                                <h3>Used panties? New panties?</h3>
                                <p>
                                    Imagine it... and you can buy it...
                                    right here... and all on demand!
                                </p>
                                <a href="@Url.RouteUrl("Register")" class="btn btn-light">Join <strong>sinswap</strong> now!</a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("HomepageTrendyCategories", new { amount = 8 })

@await Component.InvokeAsync("AboutUs")