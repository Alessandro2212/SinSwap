@model VendorEditModel

@*@inject IEventPublisher eventPublisher
*@
<div asp-validation-summary="All" class="d-none"></div>
<input asp-for="Id" type="hidden" />


<div class="container-fluid">
    <div class="row">
        <div class="d-none col-2 d-lg-flex flex-column">
            <div class="vendorAvatarContainer d-flex align-items-center justify-content-center p-3">
                <div class="avatarContainer">
                    @* <img src="https://placehold.co/120x150" /> *@
                    <img src="@Model.PictureUrl" class="mr-1" width="120" height="150">
                </div>
                <div class="vendorName">@Model.Name</div>
                <div class="shopName">@Model.ShopName</div>
            </div>

            <div class="vendorMenu nav flex-column flex-grow-1" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="v-pills-shop-tab" data-toggle="pill" href="#v-pills-shop" role="tab" aria-controls="v-pills-shop" aria-selected="true"><i class="fas fa-store-alt d-none d-xl-inline"></i> Shop</a>
                <a class="nav-link" id="v-pills-orders-tab" data-toggle="pill" href="#v-pills-orders" role="tab" aria-controls="v-pills-orders" aria-selected="false"><i class="fas fa-shopping-cart d-none d-xl-inline"></i> Orders</a>
                <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false"><i class="fas fa-envelope d-none d-xl-inline"></i> Messages</a>
                <a class="nav-link nav-settings" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false"><i class="fas fa-cog d-none d-xl-inline"></i> Settings</a>
            </div>
        </div>

        <div class="col-12 col-lg-10">

            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-shop" role="tabpanel" aria-labelledby="v-pills-shop-tab">
                    @await Html.PartialAsync("_CreateOrUpdate.Products", Model)
                </div>

                <div class="tab-pane fade" id="v-pills-orders" role="tabpanel" aria-labelledby="v-pills-orders-tab">
                    Orders
                </div>

                <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                    @await Html.PartialAsync("_Chats", Model)
                </div>

                <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                    @await Html.PartialAsync("_CreateOrUpdate.Info", Model)
                </div>
            </div>

        </div>
    </div>
</div>

