@model IList<CategorySimpleModel>

@if (Model.Count > 0)
{
    <div class="container popularCategoriesContainer">
        <div class="row">
            <div class="col-12">
                <h2>Popular categories</h2>
                <div class="flex-row row no-gutters">
                    @foreach (var item in Model)
                    {
                        <div class="col-6 col-lg-3">
                            <div class="categoryCard clothing" style="background-image: url('@item.PictureModel.ImageUrl')">
                                @{
                                    var name = @item.Name;
                                    if (!string.IsNullOrEmpty(@item.ParentCategoryName))
                                    {
                                        name = $"{@item.Name} ({@item.ParentCategoryName})";
                                    }
                                }
                                <div class="category"><a href="@Url.RouteUrl("Category", new { SeName = item.SeName })">@name</a></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}