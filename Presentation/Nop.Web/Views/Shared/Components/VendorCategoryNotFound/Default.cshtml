@model Nop.Web.Models.NotFound.VendorCategoryNotFoundModel
<div class="container firstContainer topSellersContainer">
    <div class="row breadcrumbRow">
        <div class="col-10 breadcrumbContainer">
            <div class="breadcrumbBg">
                <a href="/" class="home">Home</a> <div class="divider">/</div> Category name
            </div>
        </div>
        <div class="col-2 p-1 justify-content-end">
            <div class="categoryInfoBtn"><a href="#" class="btn btn-primary" data-toggle="modal" data-target="#categoryInfoModal">What is this?</a></div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="no-data">
                Oh no!<br />
                It seems nobody is selling @Model.Category yet.<br />
                <span>We'll let our sellers know you're interested, check back soon!</span>
            </div>
        </div>
    </div>
</div>

<div class="modal fade categoryInfoModal" id="categoryInfoModal" tabindex="-1" role="dialog" aria-labelledby="categoryInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title w-100">
                    <h5 id="categoryInfoModalLabel">CategoryName</h5>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="text">
                    Explanation about this category
                </div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("TopVendor")
