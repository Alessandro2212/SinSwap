    <nav class="main">
        <a href="/en/clothing" class="menuLink">Clothing</a>
        <a href="/en/food" class="menuLink">Food</a>
        <a href="/en/media" class="menuLink">Media</a>
        <a href="/en/services" class="menuLink">Services</a>
