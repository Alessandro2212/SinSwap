@model IList<CategorySimpleModel>

@if (Model.Count > 0)
{
    <div class="container allCatagoryContainer">
        <div class="row">
            <div class="col">
                <h2>All categories</h2>
            </div>
        </div>

        @foreach (var item in Model.Where(m=>string.IsNullOrEmpty(m.ParentCategoryName)))
        {          
            <div class="row service">
                <div class="col-2 col-lg-1 label">@item.Name</div>
                <div class="col-10 col-lg-11">
                    @foreach(var subItem in @item.SubCategories)
                    {
                      <a href="@Url.RouteUrl("Category", new { SeName = subItem.SeName })">@subItem.Name</a>
                    }
                </div>
            </div>
        }
    </div>
}